{
  "name": "js-seed-2",
  "version": "0.0.1",
  "description": "Seed your JS project",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/redgeoff/js-seed-2"
  },
  "keywords": ["js", "seed"],
  "author": "Geoffrey Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/redgeoff/js-seed-2/issues"
  },
  "scripts": {
    "beautify": "prettier-eslint --write \"src/**/*.js\" \"test/**/*.js\"",
    "lint": "eslint test src",
    "compile": "babel src -d lib",
    "compile-test": "babel src -d cache/src && babel test -d cache/test",
    "node-test": "npm run compile && mocha --require babel-core/register test/node.js",
    "node-full-test": "npm run compile && cross-env NODE_ENV=test nyc mocha test/node.js",
    "browser-server":
      "node_modules/gofur/scripts/browser/serve.js -c cache -t cache/test/browser.js",
    "browser-test": "node_modules/gofur/scripts/browser/test.js -c cache -t cache/test/browser.js",
    "browser-test-firefox":
      "node_modules/gofur/scripts/browser/test.js -c cache -t cache/test/browser.js -b selenium:firefox",
    "browser-test-chrome":
      "node_modules/gofur/scripts/browser/test.js -c cache -t cache/test/browser.js -b selenium:chrome",
    "browser-test-phantomjs":
      "node_modules/gofur/scripts/browser/test.js -c cache -t cache/test/browser.js -b selenium:phantomjs",
    "test": "npm run lint && npm run node-full-test"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^6.0.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "gofur": "0.0.9",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "prettier-eslint-cli": "^4.4.0"
  },
  "greenkeeper": {
    "ignore": ["chai-as-promised"]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "require": ["babel-register"],
    "reporter": ["lcov", "text-summary"],
    "cache": true,
    "all": true,
    "include": ["src/**/*.js"],
    "report-dir": "./cache/coverage/node",
    "sourceMap": false,
    "instrument": false
  }
}
